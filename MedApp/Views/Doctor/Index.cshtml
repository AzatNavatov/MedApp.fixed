@{
    
}
<h1>Doctors</h1>


<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    @foreach(var item in Model)
    {
        <div class="col">
            <div class="card shadow-sm">

                <img class="card-img-top" src="@item.Image" width="50" height="225" alt="Sorry no image" />
                <div class="card-body">
                    <p class="card-text">@item.Person.FirstName @item.Person.LastName </p>
                     
                    <p class="card-text">@item.Speciality </p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <button type="button" class="btn btn-sm btn-outline-secondary">Choose</button>
                            <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                            <button type="button" class="btn btn-sm btn-outline-secondary">GorGit</button>

                        </div>
                    </div>
                </div>
            </div>
        </div>

       
    }

</div>