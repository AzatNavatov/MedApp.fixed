@model IEnumerable<Patient>

<h1>Patients</h1>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-md-4 g-1">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card shadow-sm">

                <img class="card-img-top" src="@item.Image" width="50" height="225" alt="Sorry no image" />
                <div class="card-body">
                    <p class="card-text">@item.Person.FirstName </p>

                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a asp-controller="Patient" asp-action="Detail"  asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Medical Card</a>
                            <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

</div>